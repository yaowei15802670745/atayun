<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/co_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="@string/om_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/co_applyorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="@string/co_applyorder" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <!-- 订单还 -->

            <TextView
                android:id="@+id/co_order_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
            <!-- 企业单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/co_qiye"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/co_ac_symbol"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!-- 联系人 -->

            <TextView
                android:id="@+id/co_linkman"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />
            <!-- 货物信息 -->

            <TextView
                android:id="@+id/co_goods_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />
            <!-- 发货线路 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/co_send_line"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3" />

                <ImageButton
                    android:id="@+id/co_map_line"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!-- 公里数 -->

            <TextView
                android:id="@+id/co_distance"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />
            <!-- 发货地址 -->

            <TextView
                android:id="@+id/co_send_place"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />
            <!-- 目的地详细地址 -->

            <TextView
                android:id="@+id/co_detail_goal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />
            <!-- 运费 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/co_price"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/co_orddCSUBSPRICE"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/co_orddHSUBSPRICE"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />

            <!-- 联系电话 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/co_phone"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3" />

                <ImageButton
                    android:id="@+id/co_call"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!-- 图片 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/co_example_pic1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/co_example_pic2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>