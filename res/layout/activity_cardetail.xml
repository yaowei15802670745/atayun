<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="34dp"
       android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_back"/>

    <Button
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:text="@string/back" />

    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
  		android:layout_weight="1"
  		android:gravity="center"
        android:text="车源信息"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#00ffffff"
        android:text="@string/order" 
        android:textSize="15sp"/>

</LinearLayout> 
<ImageView 
    android:id="@+id/drivingLicense"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_weight="1"
    android:scaleType="fitXY"
    android:src="@drawable/drivinglicense"/>
<ImageView 
    android:id="@+id/carPicture"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_weight="1"
    android:scaleType="fitXY"
    android:src="@drawable/carpicture"/>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carId"
        android:textColor="#0000ff"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/carId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="京QG9039"
        android:textSize="18sp"/>
    <TextView 
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
    <ImageView 
        android:id="@+id/testlogo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:src="@drawable/ic_test"/>
    <TextView 
        android:id="@+id/certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物流qq诚信认证"
        android:textColor="#20b2aa"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车辆信息"
        android:textColor="#0000ff"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/carInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="高栏   前四后四  9.6米  20.0吨"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="**方"
        android:textColor="#ff0000"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系人"
        android:textColor="#0000ff"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="田在鑫"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="期望流向"
        android:textColor="#0000ff"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/liuxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="全国"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="价格："/>
    <TextView 
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:text="****"
        android:textColor="#ff0000"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最后定位时间"
        android:textColor="#0000ff"
        android:textSize="18sp"/>
    <TextView 
        android:id="@+id/LastLocationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="15-05 07:15"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">
    <TextView 
        android:id="@+id/LastLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湖南省长沙市长沙县开元路10号"
        android:textSize="15dp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离："/>
    <TextView 
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="20公里"
        android:textColor="#ff0000"/>
    
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">
    <Button 
        android:id="@+id/message"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:drawableLeft="@drawable/message"
       android:text="发送短信"
       android:textColor="#ffffff"
       android:background="@drawable/corner"/>
     <Button 
         android:id="@+id/phone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_weight="1"
       android:drawableLeft="@drawable/ic_telephone"
       android:text="拨打电话"
       android:textColor="#ffffff"
       android:background="@drawable/corner"/>
    
</LinearLayout>
</LinearLayout>
