<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="118.57"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/car_id" />

        <TextView
            android:id="@+id/car_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:text="@string/car_type" />

        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/goods_publish"
            android:textSize="20sp" />

        <Button
            android:id="@+id/publishgoods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="#00000000"
            android:text="发布" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/person_detail"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="#ff6100"
                android:drawablePadding="70dp"
                android:drawableRight="@drawable/more"
                android:orientation="horizontal"
                android:paddingLeft="80dp"
                android:paddingRight="10dp"
                android:text="@string/toast_goods"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/startcity"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/startCity"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:hint="@string/type_startCity"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/start_addressdetail"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/startAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:hint="@string/type_startAddress"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/endtcity"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/endCity"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:hint="@string/type_endCity"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/end_addressdetail"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/endAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:hint="@string/type_endAddress"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/huoyunType"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/transporttype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/transporttype" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/price"
                        android:textColor="#0000ff"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/corner"
                        android:paddingLeft="5dp" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/yuan"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/huoyuanType"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sourcetype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/sourcetype" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/goodsSpecification"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/length"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/length"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner"
                    android:hint="@string/mi"
                    android:inputType="number"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/width"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/width"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner"
                    android:hint="@string/mi"
                    android:inputType="number"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/height"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/height"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner"
                    android:hint="@string/mi"
                    android:inputType="number"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/numbers"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/numbers"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/corner"
                    android:inputType="number"
                    android:paddingLeft="5dp" />

                <Spinner
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:entries="@array/unit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/price"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/g_price"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:inputType="number"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/yuan"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/needCarType"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/needCarType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/cartype" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/needCarLength"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/needCarLength"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/carlength" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/sent_time"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/sent_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:focusable="false"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/contactsName"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/contactsName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/contactsPhone"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/contactsPhone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/corner"
                    android:inputType="phone"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/infodetail"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/infoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner"
                    android:paddingLeft="5dp"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>