<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_weight="0.19" >

        <Button
            android:id="@+id/failcheck_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_marginTop="32dp"
            android:layout_toLeftOf="@+id/pubgoods_retry"
            android:text="@string/check_home" />

        <Button
            android:id="@+id/pubgoods_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/failcheck_home"
            android:layout_alignBottom="@+id/failcheck_home"
            android:layout_alignParentRight="true"
            android:layout_marginRight="85dp"
            android:text="@string/pubgoods_retry" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pubgoods_retry"
            android:text="@string/pubgoods_no" />

    </RelativeLayout>

</LinearLayout>