<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
 
    <LinearLayout 
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/carowner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/carowner"/>
        <Button 
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:background="#00ffffff"/>
        <TextView 
            android:id="@+id/carId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/carId"/>
        <Button 
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:background="#00ffffff"/>
        <ImageView 
            android:id="@+id/medal1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            />
        <ImageView 
            android:id="@+id/medal2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/item_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <ImageView 
            android:id="@+id/carPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter"
            />
        <LinearLayout 
            android:id="@+id/detailInfo"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout 
                android:id="@+id/carInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"/>
                <TextView 
                    android:id="@+id/carType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/carType"/>
                <TextView 
                    android:id="@+id/carHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="@string/carHeight"/>
            </LinearLayout>
            
             <LinearLayout 
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher"/>
                <TextView 
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
             <LinearLayout 
                android:id="@+id/distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"/>
                <TextView 
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <TextView 
                    android:id="@+id/evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/item_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dp"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/telephone"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:paddingLeft="30dp"
	        android:paddingRight="20dp"
	        android:drawableLeft="@drawable/ic_telephone"
	        android:text="@string/telephone"
	        android:textColor="#0000ff"
	        android:background="#ffffff"
	        />
	    <Button 
	        android:id="@+id/tuisong"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="1dp"
	        android:layout_weight="1"
	        android:paddingLeft="30dp"
	        android:paddingRight="20dp"
	        android:drawableLeft="@drawable/ic_tuisong"
	        android:text="@string/tuisong"
	        android:textColor="#ff0000"
	        android:background="#ffffff"/>
	</LinearLayout>
</LinearLayout>
